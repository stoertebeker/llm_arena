# ================= Globaler Fallback =================
# Definiert die Standard-URL und den API-Key für alle Modelle,
# bei denen keine eigenen Werte gesetzt sind.
[providers]
base_url = "https://your-litellm-server.com"   # z.B. dein zentraler LiteLLM-Endpunkt
api_key  = "ENV:LITELLM_API_KEY"              # API-Key für den Standard-Endpunkt

# ================= Kandidaten & Judges =================
# Definiere hier die Modelle, die Antworten generieren (candidates)
# und die Modelle, die diese Antworten bewerten (judges).
# Die Struktur ist für beide identisch.

# Kandidaten-Modelle (die Antworten erzeugen)
[[candidates]]
name  = "openai"
model = "gpt-4o"  # Modellname, wie ihn der Ziel-Server erwartet
# Nutzt globale base_url und api_key von [providers]

[[candidates]]
name  = "anthropic"
model = "claude-3-5-sonnet-20241022"
# Nutzt ebenfalls die globalen Werte

[[candidates]]
name  = "google"
model = "gemini-1.5-pro"  # Oder gemini-1.5-flash

# Jury-Modelle (können dieselben sein + optional externe)
[[judges]]
name  = "openai"
model = "gpt-4o"

[[judges]]
name  = "anthropic"
model = "claude-3-5-sonnet-20241022"

[[judges]]
name  = "google"
model = "gemini-1.5-pro"

# Beispiel für einen lokalen Judge (Ollama, LM Studio etc.),
# der die globalen Provider-Einstellungen überschreibt.
# [[judges]]
# name     = "local_llama3"
# model    = "llama3"  # Modellname, wie ihn Ollama/LM Studio kennt
# base_url = "http://localhost:11434/v1"   # Eigene URL, die den globalen Wert überschreibt
# api_key  = "" # Lokale Modelle benötigen oft keinen Key

[settings]
reveal_provenance = false    # true = zeigt Provider-Zuordnung den Judges (für Bias-Analyse)
elo_enabled = true          # Elo-Rating-System aktivieren
elo_initial = 1500         # Start-Elo für neue Provider
elo_k = 16                 # Elo-Update-Faktor (16 = standard)
temperature = 0.2          # Niedrig für konsistente Bewertungen
top_p = 1.0               # Nucleus sampling
max_tokens = 1024         # Maximale Token pro Antwort
request_timeout_seconds = 120  # HTTP-Timeout
retries = 1               # Anzahl Wiederholungsversuche
